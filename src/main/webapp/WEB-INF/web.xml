<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <listener-class>com.atex.milan.svnuser.servlet.listener.AppContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <servlet-class>com.atex.milan.svnuser.servlet.ResetPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>disableuserservlet</servlet-name>
        <servlet-class>com.atex.milan.svnuser.servlet.DisableUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>enableuserservlet</servlet-name>
        <servlet-class>com.atex.milan.svnuser.servlet.EnableUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adduserservlet</servlet-name>
        <servlet-class>com.atex.milan.svnuser.servlet.AddUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResetPasswordServlet</servlet-name>
        <url-pattern>/resetpassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>disableuserservlet</servlet-name>
        <url-pattern>/disableuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>enableuserservlet</servlet-name>
        <url-pattern>/enableuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adduserservlet</servlet-name>
        <url-pattern>/adduser</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>ServletContainer</servlet-name>
      <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
      <init-param>
        <param-name>com.sun.jersey.config.property.packages</param-name>
        <param-value>com.atex.milan.svnuser.servlet.resources</param-value>
      </init-param>
      <init-param>
        <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
        <param-value>true</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>ServletContainer</servlet-name>
      <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>
    
    <!-- 
    <filter>
      <filter-name>Guice Filter</filter-name>
      <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
    </filter>
    <filter-mapping>
      <filter-name>Guice Filter</filter-name>
      <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
